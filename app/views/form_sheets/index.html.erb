<p id="notice"><%= notice %></p>

<h1>Form Sheets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @form_sheets.each do |form_sheet| %>
      <tr>
        <td><%= form_sheet.title %></td>
        <td><%= form_sheet.content %></td>
        <td><%= link_to 'Show', form_sheet %></td>
        <td><%= link_to 'Edit', edit_form_sheet_path(form_sheet) %></td>
        <td><%= link_to 'Destroy', form_sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Form Sheet', new_form_sheet_path %>
