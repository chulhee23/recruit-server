<div class="card p-3 col-md-8 col-sm-12 mx-auto">
  <div class="auth-form mx-5 no-float">
    <div class="row ">
      <div class="col-sm-12 col-xs-12">
        <div class="mb-30">
          <h2 class="text-center txt-dark mb-5 nanum">RECRUIT</h2>
        </div>

        <div class="form-wrap">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { autocomplete: "off" }) do |f| %>
            <div class="form-group">
              <%= f.label "이메일", class: "control-label mb-10" %><br />
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "이메일을 입력해주세요" %>
            </div>
            <div class="form-group">
              <%= f.label "비밀번호", class: "pull-left control-label mb-10" %>
              <%= f.password_field :password, class: "form-control", placeholder: "비밀번호 입력해주세요" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="checkbox checkbox-primary pr-10 pull-left mb-3">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <div class="clearfix"></div>
          </div>
          <div class="form-group text-center">
            <%= f.submit "로그인", class: "btn btn-block btn-info btn-rounded" %>
          </div>
        <% end %>
        <hr>

        <%= render "devise/shared/links" %>



      </div>
    </div>
  </div>
</div>
