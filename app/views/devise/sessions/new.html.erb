<div class="auth-form ml-auto mr-auto no-float">
  <div class="row">
    <div class="col-sm-12 col-xs-12">
      <div class="mb-30">
        <h3 class="text-center txt-dark mb-10">로그인 하기이이이</h3>
				<h6 class="text-center nonecase-font txt-grey">정보를 입력해라아ㅏ</h6>
      </div>
      <div class="form-wrap">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { autocomplete: "off" }) do |f| %>
          <div class="form-group">
            <%= f.label "이메일", class: "control-label mb-10" %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "이메일을 입력해주세요" %>
          </div>
          <div class="form-group">
            <%= f.label "비밀번호", class: "pull-left control-label mb-10" %>
            <%= link_to '비밀번호를 잊으셨나요 ?', '#', class: "capitalize-font txt-primary block mb-10 pull-right font-12" %>
            <div class="clearfix"></div>
            <%= f.password_field :password, class: "form-control", placeholder: "비밀번호 입력해주세요" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="checkbox checkbox-primary pr-10 pull-left">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="clearfix"></div>
        </div>
        <div class="form-group text-center">
          <%= f.submit "Log in", class: "btn btn-info btn-rounded" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
