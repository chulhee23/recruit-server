<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 show-panel">
    <%= form_for [question.form_sheet, Question.new] , url: answer_form_sheet_question_path(question.form_sheet, question), remote: true do |f| %>
    <div class="panel panel-default card-view">
        <div class="panel-heading">
            <div class="pull-left">
                <h6 class="panel-title txt-dark"><%= question.content %></h6>
            </div>
            <div class="clearfix"></div>
        </div>  
        <div class="panel-wrapper collapse in">
            <div  class="panel-body">
                
            
                    <%= f.fields_for :questionable, TextForm.new do |ff| %>
                        <%= ff.text_field :answer %>
                    <% end %>
                    <%= f.submit "answer" %>
                
            </div>
        </div>
    </div>
    <% end %>
</div>

