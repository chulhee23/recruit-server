<div class="show-wrapper" style="display:block">
    <div class="card-header header-elements-inline">
    <h6 class="card-title"><%= question.content %></h6>
    <div class="header-elements">
        <div class="list-icons">
        <a class="list-icons-item" data-action="collapse"></a>
        <a class="list-icons-item" data-action="reload"></a>
            <%= link_to "",form_sheet_question_path(question.form_sheet, question), method: :delete, remote: true, class: "list-icons-item", data: {action: "remove"} %>
        </div>
    </div>
    </div>
    <div class="card-body">
    <%= form_for [question.form_sheet, Question.new] , url: answer_form_sheet_question_path(question.form_sheet, question), remote: true do |f| %>
        <%= f.hidden_field :status, value: 'not_answer' %>
        <div class="form-group shadow-form">
            <%= f.label :questionable, "답변" %>
            <%= f.fields_for :questionable, TextForm.new do |ff| %>
                <%= ff.text_area :answer ,rows:3, cols:3, class: "form-control", :placeholder => "답변을 입력하세요"%>
            <% end %>
        </div>
    <% end %>
    </div>
</div>