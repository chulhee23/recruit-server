<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 form-panel" style="display:none">
    <div class="panel panel-default card-view">
      <div class="panel-heading">
        <div class="pull-left">
          <h6 class="panel-title txt-dark">단답형</h6>
        </div>
        <div class="clearfix"></div>
      </div>
      <div  class="panel-wrapper collapse in">
            <div  class="panel-body">
                
                <%= form_for [question.form_sheet, question], remote: true do |f| %>

                    <%= f.hidden_field :status, value: 'not_answer' %>

                    <%= f.text_field :content %>

                    <%= f.submit %>
                <% end %>
                <%= link_to 'destroy', form_sheet_question_path(question.form_sheet, question), method: :delete, remote: true %>
            </div>
        </div>
    </div>
</div>
