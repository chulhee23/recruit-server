<div class="container">
  <div class="row">
    <% @teams.each do |team| %>
      <div class="col-md-4">
        <%= link_to team_path(team) do %>
          <div class="card card-body justify-content-center text-center" style="min-height: 350px;">
            <div>
              <!-- team image로 넣어두면 될듯 -->
              <i class="icon-question7 icon-2x text-blue border-blue border-3 rounded-round p-3 mb-3"></i>
              <h5 class="card-title"><%= sanitize team.name %></h5>
              <div class="btn btn-primary">
                대표 : <%= team&.team_users&.captain&.first&.user&.name %>
              </div>
              <p class="mt-3">
                <%= sanitize team.description %>
                
              </p>
              
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
