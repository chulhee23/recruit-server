<p id="notice"><%= notice %></p>

<h1>Form Sheets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_sheets.each do |question_sheet| %>
      <tr>
        <td><%= question_sheet.title %></td>
        <td><%= question_sheet.content %></td>
        <td><%= link_to 'Show', question_sheet %></td>
        <td><%= link_to 'Edit', edit_question_sheet_path(question_sheet) %></td>
        <td><%= link_to 'Destroy', question_sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

